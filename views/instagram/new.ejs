<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Post</h1>
        <div class="col-6 offset-3">

            <form action="/instagram" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="media" class="form-label">Upload an Image or Video</label>
                    <input type="file" name="media" id="media" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="caption" class="form-label">Caption</label>
                    <textarea name="post[caption]" id="caption" class="form-control" rows="3" required></textarea>
                </div>
                <div class="col-5 mb-3">
                    <label for="publishAt" class="form-label">Publish Time</label>
                    <input type="datetime-local" name="post[publishAt]" id="publishAt" class="form-control" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Schedule Post</button>
                </div>
            </form>

            <a href="/instagram">My Posts</a>

        </div>
    </div>